<%= form_with(model: order, local: true) do |form| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :total_price %>
    <%= form.text_field :total_price, id: :order_total_price %>
  </div>

  <div class="field">
    <%= form.label :num_units %>
    <%= form.number_field :num_units, id: :order_num_units %>
  </div>

  <div class="field">
    <%= form.label :employee_id %>
    <%= form.select :employee_id, Employee.all.collect {|p| [ p.name, p.id ] }, id: :index_orders_on_employee_id %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
